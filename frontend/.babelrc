{
    "env": {
        "development": {
            "presets": [
                [
                    "@babel/preset-react",
                    {
                        "development": true
                    }
                ]
            ]
        }
    },
    "presets": [
        [
            "next/babel",
            {
                "preset-react": {
                    "runtime": "automatic"
                }
            }
        ]
    ],
    "plugins": [
        "babel-plugin-macros",
        "react-require",
        [
            "styled-components",
            {
                "ssr": true,
                "displayName": false,
                "filename": false,
                "minify": false,
                "transpileTemplateLiterals": false,
                "preprocess": false,
                "pure": true
            }
        ],
        [
            "module-resolver",
            {
                "root": [
                    "."
                ],
                "alias": {
                    "@components": "./src/components/",
                    "@configs": "./src/configs/",
                    "@enums": "./src/enums/",
                    "@helpers": "./src/helpers/",
                    "@hooks": "./src/hooks/",
                    "@locales": "./src/locales/",
                    "@pages": "./src/pages/",
                    "@styles": "./src/styles/",
                    "@utils": "./src/utils/"
                }
            }
        ]
    ]
}
