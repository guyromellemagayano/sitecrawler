{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react-hooks/recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "React": "writable",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "better-styled-components",
    "react-hooks"
  ],
  "rules": {
    "no-underscore-dangle": 1,
    "import/prefer-default-export": "on",
    "react/react-in-jsx-scope": "on",
    "react/jsx-filename-extension": "on",
    "react/prefer-stateless-function": "on",
    "react/jsx-pascal-case": "on",
    "jsx-a11y/anchor-is-valid": "on",
    "react/state-in-constructor": "on",
    "react/prop-types": "on",
    "better-styled-components/sort-declarations-alphabetically": 2,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "quotes": [
      2,
      "double",
      {
        "avoidEscape": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}