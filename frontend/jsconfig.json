{
	"compilerOptions": {
		"baseUrl": ".",
		"experimentalDecorators": true,
		"jsxImportSource": "react",
		"resolveJsonModule": true,
		"paths": {
			"@components/*": ["./components/*"],
			"@constants/*": ["./constants/*"],
			"@enums/*": ["./enums/*"],
			"@helpers/*": ["./helpers/*"],
			"@hooks/*": ["./hooks/*"],
			"@pages/*": ["./pages/*"],
			"@styles/*": ["./styles/*"],
			"@utils/*": ["./utils/*"]
		}
	},
	"exclude": ["./node_modules/", "./.next/"]
}
