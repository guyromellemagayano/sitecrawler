{
	"exclude": [
		"node_modules",
		".next"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": [
				"./src/components/*"
			],
			"@configs/*": [
				"./src/configs/*"
			],
			"@helpers/*": [
				"./src/helpers/*"
			],
			"@hooks/*": [
				"./src/hooks/*"
			],
			"@pages/*": [
				"./src/pages/*"
			],
			"@styles/*": [
				"./src/styles/*"
			],
			"@utils/*": [
				"./src/utils/*"
			]
		},
	}
}
