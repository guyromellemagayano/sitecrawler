{
	"exclude": [
		"node_modules",
		".next"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"experimentalDecorators": true,
		"jsxImportSource": "react",
		"paths": {
			"@components/*": [
				"./components/*"
			],
			"@configs/*": [
				"./configs/*"
			],
			"@helpers/*": [
				"./helpers/*"
			],
			"@hooks/*": [
				"./hooks/*"
			],
			"@pages/*": [
				"./pages/*"
			],
			"@styles/*": [
				"./styles/*"
			],
			"@utils/*": [
				"./utils/*"
			]
		},
	}
}
