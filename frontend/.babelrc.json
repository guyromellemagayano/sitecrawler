{
	"presets": [
		[
			"next/babel",
			{
				"styled-jsx": {
					"plugins": ["styled-jsx-plugin-sass"]
				}
			}
		]
	],
	"plugins": [
		"babel-plugin-macros",
		"inline-react-svg",
		"add-react-displayname",
		"react-require",
		[
			"styled-components",
			{
				"ssr": true,
				"displayName": true,
				"minify": true,
				"preprocess": false,
				"pure": true
			}
		],
		[
			"module-resolver",
			{
				"root": ["./"],
				"alias": {
					"@components": "./src/components",
					"@hooks": "./src/hooks",
					"@styles": "./src/styles",
					"@enums": "./src/enums",
					"@helpers": "./src/helpers"
				}
			}
		]
	]
}
